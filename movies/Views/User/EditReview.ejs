<% layout('../layouts/mainlayout.ejs') -%>
<br>

<form action="/User/Update_Review" method="POST">
    <h1><%= review.movieName %></h1>
       
<table>

    <input type='hidden' name="_id" value= <%= review._id %> />
    <input type='hidden' name="movieName" value="<%= review.movieName %>" />
    <input type='hidden' name="username" value= <%= reqInfo.username %> />

       <tr>
              <td><b>Review: </b></td>
       

       <td>
              <input type='text'  name= "review" 
              value="<%= review.review ? review.review : '' %>"  /><br/>
       </td>

       </tr>

       <tr>
              <td><b>Rating(1 to 5): </b></td>
       
       <td>
              <input type='number'  name= "stars" 
              value="<%= review.stars ? review.stars : '' %>" /><br/>
       </td>

       </tr>
       <tr>
              <td>                    
                     <input type="submit" value="Submit"></input>
                     <input type="submit" value="Cancel"></input>
              </td>
          

       </tr>

</table>


</form>

    <%= errorMessage %>
    
